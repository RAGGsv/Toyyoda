@model IEnumerable<toyoda.Models.pais>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pais</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombrePais)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombrePais)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idPais }) |
            @Html.ActionLink("Detalless", "Details", new { id=item.idPais }) |
